<style>
  #productos { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 20px; }
  #productos > div { background-color: #f2f2f2; padding: 20px; border-radius:
  5px; text-align: center; } /* Estilos para el formulario */ #NuevoProd {
  display: grid; gap: 10px; } #NuevoProd input[type="text"] { padding: 5px;
  border-radius: 3px; border: 1px solid #ccc; } #NuevoProd input[type="submit"]
  { padding: 8px 15px; background-color: #4CAF50; color: white; border: none;
  border-radius: 3px; cursor: pointer; }
</style>

<h2>a√±adir producto</h2>
<form id="NuevoProd">
  <label for="title">Titulo</label>
  <input type="text" name="title" id="title" />
  <label for="description">Descripcion</label>
  <input type="text" name="description" id="description" />
  <label for="price">Precio</label>
  <input type="text" name="price" id="price" />
  <label for="thumbnail">Miniatura</label>
  <input type="text" name="thumbnail" id="thumbnail" />
  <label for="code">Code</label>
  <input type="text" name="code" id="code" />
  <label for="stock">Stock</label>
  <input type="text" name="stock" id="stock" />
  <input type="submit" value="Agregar Producto" />
</form>
<div id="productos">
  {{#each products}}
    <div>
      <h3>{{title}}</h3>
      <h2>{{id}}</h2>
      <p>${{price}}</p>
      <p>stock:{{stock}}</p>
    </div>
  {{/each}}
</div>
<script src="/socket.io/socket.io.js"></script>
<script src="../public/js/Index.js"></script>